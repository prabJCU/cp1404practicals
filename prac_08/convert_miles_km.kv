BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '12'
            font_size: 48
            multiline: False
            size_hint_x: 3
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1
            Button:
                id: increase_number
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                id: decrease_number
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        id: convert_button
        text: 'Convert miles to km'
        on_press: app.handle_conversion(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)